                <ControlTemplate TargetType="ListViewItem">
                    <Grid x:Name="ContentBorder"
                          Background="{TemplateBinding Background}"
                          BorderBrush="{TemplateBinding BorderBrush}"
                          BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter x:Name="ContentPresenter"
                                          Margin="{TemplateBinding Padding}"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          Background="Transparent"
                                          BorderBrush="Transparent"
                                          BorderThickness="0"
                                          ContentTransitions="{TemplateBinding ContentTransitions}" />
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="PointerOver" />
                                <VisualState x:Name="Pressed" />
                                <VisualState x:Name="Selected" />
                                <VisualState x:Name="PointerOverSelected" />
                                <VisualState x:Name="PressedSelected" />
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--#endregion-->

    <!--#region GridViewItems-->

    <Style x:Key="ArticleContainerItemContainerStyle"
           BasedOn="{StaticResource GridViewItemExpanded}"
           TargetType="GridViewItem">
        <Setter Property="Padding" Value="14" />
        <Setter Property="Margin" Value="0" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="GridViewItem">
                    <Grid Margin="{TemplateBinding Padding}">

                        <customcontrols:NeumorphCard x:Name="Card3"
                                                     Grid.RowSpan="2"
                                                     ui:VisualExtensions.NormalizedCenterPoint="0.8,0.5"
                                                     Background="WhiteSmoke"
                                                     IsHitTestVisible="False"
                                                     Opacity="0">

                            <animations:Explicit.Animations>
                                <animations:AnimationSet x:Name="RotateEnterAnimation3">
                                    <animations:OpacityAnimation To="1" />
                                    <animations:RotationInDegreesAnimation EasingMode="EaseOut"
                                                                           EasingType="Quintic"
                                                                           To="10"
                                                                           Duration="0:0:0.5" />
                                </animations:AnimationSet>
                                <animations:AnimationSet x:Name="RotateExitAnimation3">
                                    <animations:RotationInDegreesAnimation EasingMode="EaseOut"
                                                                           EasingType="Quintic"
                                                                           To="0"
                                                                           Duration="0:0:0.5" />
                                    <animations:OpacityAnimation To="0" />
                                </animations:AnimationSet>
                            </animations:Explicit.Animations>

                        </customcontrols:NeumorphCard>

                        <customcontrols:NeumorphCard x:Name="Card2"
                                                     Grid.RowSpan="2"
                                                     ui:VisualExtensions.NormalizedCenterPoint="0.8,0.5"
                                                     Background="WhiteSmoke"
                                                     IsHitTestVisible="False"
                                                     Opacity="0">

                            <animations:Explicit.Animations>
                                <animations:AnimationSet x:Name="RotateEnterAnimation2">
                                    <animations:OpacityAnimation To="1" />
                                    <animations:RotationInDegreesAnimation EasingMode="EaseOut"
                                                                           EasingType="Quintic"
                                                                           To="5"
                                                                           Duration="0:0:0.5" />
                                </animations:AnimationSet>
                                <animations:AnimationSet x:Name="RotateExitAnimation2">
                                    <animations:RotationInDegreesAnimation EasingMode="EaseOut"
                                                                           EasingType="Quintic"
                                                                           To="0"
                                                                           Duration="0:0:0.5" />
                                    <animations:OpacityAnimation To="0" />
                                </animations:AnimationSet>
                            </animations:Explicit.Animations>

                        </customcontrols:NeumorphCard>

                        <customcontrols:NeumorphCard x:Name="Card1"
                                                     Grid.RowSpan="2"
                                                     Background="WhiteSmoke"
                                                     IsHitTestVisible="False" />

                        <ContentPresenter x:Name="ContentPresenter"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          Background="Transparent"
                                          BorderThickness="0"
                                          ContentTransitions="{TemplateBinding ContentTransitions}">
                            <interactivity:Interaction.Behaviors>
                                <interactions:EventTriggerBehavior EventName="PointerEntered">
                                    <behaviors:StartAnimationAction Animation="{Binding ElementName=RotateEnterAnimation2}" />
                                    <behaviors:StartAnimationAction Animation="{Binding ElementName=RotateEnterAnimation3}" />
                                </interactions:EventTriggerBehavior>
                                <interactions:EventTriggerBehavior EventName="PointerExited">
                                    <behaviors:StartAnimationAction Animation="{Binding ElementName=RotateExitAnimation2}" />
                                    <behaviors:StartAnimationAction Animation="{Binding ElementName=RotateExitAnimation3}" />
                                </interactions:EventTriggerBehavior>
                            </interactivity:Interaction.Behaviors>
                        </ContentPresenter>

                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

