<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:animations="using:CommunityToolkit.WinUI.UI.Animations"
                    xmlns:behaviors="using:CommunityToolkit.WinUI.UI.Behaviors"
                    xmlns:converter="using:Sales4Pro.WinUI.CustomControls.Converter"
                    xmlns:customcontrols="using:Sales4Pro.WinUI.CustomControls"
                    xmlns:interactions="using:Microsoft.Xaml.Interactions.Core"
                    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
                    xmlns:media="using:Microsoft.UI.Xaml.Media"
                    xmlns:ui="using:CommunityToolkit.WinUI.UI">


    <!--  Converters  -->
    <converter:InvertBooleanToVisibilityConverter x:Key="InvertBooleanToVisibilityConverter" />
    <converter:ByteToImageSourceConverter x:Key="ByteToImageSourceConverter" />
    <converter:InvertBooleanConverter x:Key="InvertBooleanConverter" />
    <converter:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
    <converter:TimeToDateTimeOffsetConverter x:Key="TimeToDateTimeOffsetConverter" />
    <converter:LocalShortDateFormatConverter x:Key="LocalShortDateFormatConverter" />

    <media:AcrylicBrush x:Key="AcrylicInAppFillColorDefaultBrush"
                        FallbackColor="#EAEAEA"
                        TintColor="White"
                        TintLuminosityOpacity="0.0"
                        TintOpacity="0" />
    <media:AcrylicBrush x:Key="AcrylicNavigationViewContentColorBrush"
                        FallbackColor="#F0F0F0"
                        TintColor="White"
                        TintLuminosityOpacity="0.5"
                        TintOpacity="0" />

    <!--  Die Hintergrundfarbe der HauptFrames  -->
    <SolidColorBrush x:Key="MainFrameBackground"
                     Color="#FFEAEAEA" />

    <!--  Die Hintergrundfarbe der NavigationView  -->
    <SolidColorBrush x:Key="NavigationViewContentBackground"
                     Color="Transparent" />


    <!--  Die Hintergrundfarbe der App  -->
    <SolidColorBrush x:Key="ApplicationPageBackgroundThemeBrush"
                     Color="#D8D8D8" />

    <!--  Die Headerfarbe der RichTextBox  -->
    <StaticResource x:Key="TextControlHeaderForeground"
                    ResourceKey="SystemControlForegroundBaseMediumHighBrush" />

    <!--  Mache die RevealBorder um GridViewItems unsichtbar  -->
    <SolidColorBrush x:Key="SystemControlHighlightListLowBrush"
                     Color="Transparent" />
    <SolidColorBrush x:Key="SystemControlHighlightListMediumBrush"
                     Color="Transparent" />

    <x:Double x:Key="ContentDialogMaxWidth">900</x:Double>
    <x:Double x:Key="ContentDialogMaxHeight">900</x:Double>

    <!--#region STYLES-->

    <!--#region TextBlockStyles-->

    <Style x:Key="BaseTextBlockStyle"
           TargetType="TextBlock">
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextTrimming" Value="None" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="LineStackingStrategy" Value="MaxHeight" />
        <Setter Property="TextLineBounds" Value="Full" />
    </Style>

    <Style x:Key="BodyTextBlockStyle"
           BasedOn="{StaticResource BaseTextBlockStyle}"
           TargetType="TextBlock">
        <Setter Property="FontWeight" Value="SemiLight" />
        <Setter Property="TextLineBounds" Value="TrimToBaseline" />
        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="OpticalMarginAlignment" Value="TrimSideBearings" />
    </Style>

    <Style x:Key="TitleTextBlockStyle"
           BasedOn="{StaticResource BaseTextBlockStyle}"
           TargetType="TextBlock">
        <Setter Property="TextWrapping" Value="NoWrap" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="OpticalMarginAlignment" Value="TrimSideBearings" />
        <Setter Property="TextLineBounds" Value="TrimToBaseline" />
        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
    </Style>

    <Style x:Key="MiniTitleTextBlockStyle"
           BasedOn="{StaticResource TitleTextBlockStyle}"
           TargetType="TextBlock">
        <Setter Property="FontSize" Value="11" />
    </Style>

    <Style x:Key="CaptionTextBlockStyle"
           BasedOn="{StaticResource BaseTextBlockStyle}"
           TargetType="TextBlock">
        <Setter Property="TextWrapping" Value="NoWrap" />
        <Setter Property="FontWeight" Value="Semilight" />
        <Setter Property="OpticalMarginAlignment" Value="None" />
        <Setter Property="TextLineBounds" Value="TrimToBaseline" />
        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
    </Style>

    <Style x:Key="MiniCaptionTextBlockStyle"
           BasedOn="{StaticResource CaptionTextBlockStyle}"
           TargetType="TextBlock">
        <Setter Property="FontSize" Value="11" />
    </Style>

    <!--#endregion-->

    <!--  Custom Control Styles  -->

    <!--<Style x:Key="NeumorphCardInlayPanelStyle"
           TargetType="customcontrols:NeumorphCard">
        <Setter Property="Background" Value="#EAEAEA" />
        <Setter Property="Margin" Value="12" />
